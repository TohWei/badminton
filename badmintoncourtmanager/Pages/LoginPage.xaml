<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="badmintoncourtmanager.Pages.LoginPage">
	<ContentPage.Content>
        <StackLayout Padding="5,20,5,5" WidthRequest="400" HorizontalOptions="CenterAndExpand">
        <Label Text="Welcome" HorizontalTextAlignment = "Center"></Label>
            <Frame Margin="20" HasShadow="false" BackgroundColor="Teal">
                <StackLayout>
                <Label Text="Login username"></Label>
                <Entry x:Name="Username" Placeholder="username" Text="{Binding Username}"></Entry>
                <Label Text="Password"></Label>       
                <Entry x:Name="Password" Placeholder="password" IsPassword="true" Text="{Binding Password}"></Entry>
                <Button Text="Login" TextColor="Teal" Command="{Binding BtnLoginCommand}" BackgroundColor="Silver"></Button>
                    </StackLayout>
            </Frame>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
